<odoo>
	<data>
		<!--Equipo-->
		<record id="mantenimiento.equipo_tree" model="ir.ui.view">
			<field name="name">mantenimiento.equipo.tree</field>
			<field name="model">mantenimiento.equipo</field>
			<field name="arch" type="xml">
				<tree>
					<field name="nombre"/>					
				</tree>
			</field>
		</record>

		<record id="mantenimiento.equipo_form" model="ir.ui.view">

			<field name="name">mantenimiento.equipo.form</field>
			<field name="model">mantenimiento.equipo</field>
			<field name="arch" type="xml">
				<form>
					<group colspan="2" col="1">
						<field name="nombre"/>
					</group>
				</form>
			</field>
		</record>

		<!--Incidencia-->
		
		<record id="mantenimiento.incidencia_tree" model="ir.ui.view">
			<field name="name">mantenimiento.incidencia.tree</field>
			<field name="model">mantenimiento.incidencia</field>
			<field name="arch" type="xml">
				<tree>
					<field name="destinatario"/>					
					<field name="descripcion"/>
					<field name="estado"/>
					<field name="tipo_de_incidencia"/>
					<field name="fecha_y_hora_Inicio"/>
					<field name="fecha_y_hora_Final"/>
					<field name="prioridad"/>
				</tree>
			</field>
		</record>

		<record id="mantenimiento.incidencia_form" model="ir.ui.view">

			<field name="name">mantenimiento.incidencia.form</field>
			<field name="model">mantenimiento.incidencia</field>
			<field name="arch" type="xml">
				<form>
					<group colspan="7" col="4">						
						<field name="destinatario"/>					
						<field name="descripcion"/>
						<field name="estado"/>
						<field name="tipo_de_incidencia"/>
						<field name="fecha_y_hora_Inicio"/>
						<field name="fecha_y_hora_Final"/>
						<field name="prioridad"/>
					</group>
				</form>
			</field>
		</record>

		<!--Trabajador-->

		<record id="mantenimiento.trabajador_tree" model="ir.ui.view">
			<field name="name">mantenimiento.trabajador.tree</field>
			<field name="model">mantenimiento.trabajador</field>
			<field name="arch" type="xml">
				<tree>
					<field name="dni"/>					
					<field name="nombre"/>
					<field name="edad"/>
					<field name="puesto"/>
					<field name="Fecha_Contratacion"/>
					<field name="Permisos"/>
					<field name="Telefono"/>
					<field name="Equipo"/>
				</tree>
			</field>
		</record>

		<record id="mantenimiento.trabajador_form" model="ir.ui.view">

			<field name="name">mantenimiento.trabajador.form</field>
			<field name="model">mantenimiento.trabajador</field>
			<field name="arch" type="xml">
				<form>
					<group colspan="8" col="4">						
						
					<field name="dni"/>					
					<field name="nombre"/>
					<field name="edad"/>
					<field name="puesto"/>
					<field name="Fecha_Contratacion"/>
					<field name="Permisos"/>
					<field name="Telefono"/>
					<field name="Equipo"/>
					</group>
				</form>
			</field>
		</record>

		<!-- Tipo de incidencia-->

		<record id="mantenimiento.tipo_tree" model="ir.ui.view">
			<field name="name">mantenimiento.tipo.tree</field>
			<field name="model">mantenimiento.tipo</field>
			<field name="arch" type="xml">
				<tree>
					<field name="Tipo"/>					
				</tree>
			</field>
		</record>

		<record id="mantenimiento.tipo_form" model="ir.ui.view">

			<field name="name">mantenimiento.tipo.form</field>
			<field name="model">mantenimiento.tipo</field>
			<field name="arch" type="xml">
				<form>
					<group colspan="8" col="4">						
						
						<field name="Tipo"/>
					</group>
				</form>
			</field>
		</record>
	</data>
</odoo>
